    <form method="POST">
        {{ form_start(suiviform) }}
        
        {{ form_row(suiviform.orderNumber) }}
        
        <button type="submit">Suivre</button>
        
        {{ form_end(suiviform) }}
    </form>
    
    {% if order is defined %}
        <h2>Informations sur la commande</h2>
        <p>Num√©ro de commande : {{ order.orderNumber }}</p>
