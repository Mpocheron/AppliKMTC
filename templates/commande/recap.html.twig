{% extends 'base.html.twig' %}

{% block title %}Récapitulatif de la commande{% endblock %}

{% block content %}
<p class="marge-navbar"> </p>

<h1>Récapitulatif de la commande</h1>

<p>Commande numéro : {{ commande.id }}</p>

<h2>Expéditeur :</h2>
<p>
    {{ commande.adresseExpedition.numero }} {{ commande.adresseExpedition.nom }}<br>
    {{ commande.adresseExpedition.codePostal }} {{ commande.adresseExpedition.ville }}
</p>

<h2>Destinataire :</h2>
<p>
    {{ commande.adresseDestination.numero }} {{ commande.adresseDestination.nom }}<br>
    {{ commande.adresseDestination.codePostal }} {{ commande.adresseDestination.ville }}
</p>

<h2>Adresse de facturation :</h2>
<p>
    {{ commande.adresseFacturation.numero }} {{ commande.adresseFacturation.nom }}<br>
    {{ commande.adresseFacturation.codePostal }} {{ commande.adresseFacturation.ville }}
</p>

<h2>Détails de la commande :</h2>
<p>Hauteur : {{ commande.hauteur }} cm</p>
<p>Largeur : {{ commande.largeur }} cm</p>
<p>Longueur : {{ commande.longueur }} cm</p>
<p>Poids : {{ commande.poids }} kg</p>

<h2>Destinataire :</h2>
<p>
    Nom : {{ commande.nomDestinataire }}<br>
    Prénom : {{ commande.prenomDestinataire }}
</p>

<a href="{{ path('app_commande') }}">Retour à la page de commande</a>
{% endblock %}
